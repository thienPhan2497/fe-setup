{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["airbnb", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"camelcase": 1,
		"eqeqeq": ["warn"],
		"max-len": ["error", { "code": 80 }],
		"semi": 0,
		"comma-dangle": 0,
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	}
}
